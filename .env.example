# 环境变量配置文件
# 复制此文件为 .env 并填入真实值（本地开发）
# 或在 Railway 中设置这些环境变量

# Telegram 通知（必需）
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Predict.fun API（可选，用于真实数据）
PREDICT_API_KEY=your_predict_api_key_here

# Probable.markets API（可选，用于三平台套利）
PROBABLE_API_KEY=your_probable_api_key_here
PROBABLE_SECRET=your_probable_secret_here
PROBABLE_PASSPHRASE=your_probable_passphrase_here
PROBABLE_WALLET_ADDRESS=your_wallet_address_here
PROBABLE_CHAIN_ID=1

# 运行模式（可选）
# USE_HYBRID_MODE=true - Polymarket 真实 + Predict.fun/Probable 模拟（默认）
# USE_REAL_API=true - 完全真实模式（需要所有 API）
USE_HYBRID_MODE=true
USE_REAL_API=false

# 套利配置（可选）
MIN_ARBITRAGE_THRESHOLD=2.0
SCAN_INTERVAL=10
COOLDOWN_MINUTES=5

# 日志级别（可选）
LOG_LEVEL=INFO
