{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "restartPolicyType": "ALWAYS"
  },
  "variables": {
    "PORT": "5000",
    "OPINION_BASE_URL": "https://proxy.opinion.trade:8443/openapi",
    "OPINION_POLY_THRESHOLD": "2.0",
    "PREDICT_BASE_URL": "https://api.predict.fun",
    "SCAN_INTERVAL": "60",
    "MIN_ARBITRAGE_THRESHOLD": "2.0",
    "COOLDOWN_MINUTES": "5",
    "LOG_LEVEL": "INFO"
  }
}
